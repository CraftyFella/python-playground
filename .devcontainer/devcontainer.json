{
    "name": "Python Workshop Environment",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "forwardPorts": [8888],
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md",
                "hello_world.py"
            ]
        },
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}